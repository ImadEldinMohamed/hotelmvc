@model IEnumerable<hotelmvc.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>lista dei clienti</h2>

<p>
    @Html.ActionLink("Crea nuovo cliente", "CreateCliente")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDcliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.citta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.provincia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cellulare)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th></th>
    </tr>

@foreach (hotelmvc.Models.Cliente item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDcliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cognome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.citta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.provincia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cellulare)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.ActionLink("modifica", "editcliente", new { IDcliente = item.IDcliente }, new { @class = "btn btn-warning" })
            @Html.ActionLink("elimina", "deletecliente", new { IDcliente = item.IDcliente }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
